<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.ProdAuthorisedTargetCannotBeAll">
    <DisplayName>RaiseFault.ProdAuthorisedTargetCannotBeAll</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Headers/>
            <Payload contentType="text/plain"/>
            <StatusCode>401</StatusCode>
            <ReasonPhrase>Access Denied</ReasonPhrase>
        </Set>
        <AssignVariable>
            <Name>ih.error.code</Name>
            <Value>unauthorised</Value>
        </AssignVariable>
        <AssignVariable>
            <Name>ih.error.diagnostics</Name>
            <Value>Custom Attribute Key-Value pair "authorised_targets" cannot be "*" in production.</Value>
        </AssignVariable>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>